@model TallyBook.Models.ViewModels.TallyBookViewModel

@{
    ViewBag.Title = "TallyBookChildAction";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>
        @{
            var i = 0;
            foreach (var item in @Model.TallyBook)
            {
                ++i;
                <tr>
                    <td>@i</td>
                    <td>@item.Type</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Money.ToString("#,0")</td>
                </tr>    }
        }
       
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
